{
    "buildCommand": "cd frontend && npm install && npm run build",
    "outputDirectory": "frontend/build",
    "rewrites": [
        {
            "source": "/api/:path*",
            "destination": "/backend/index.js"
        }
    ],
    "functions": {
        "backend/index.js": {
            "maxDuration": 10
        }
    }
}